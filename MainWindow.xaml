<Window x:Class="TaskKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskKeeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="0,10,10,10">
        <!-- Верхний панель — ввод новой задачи -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Просто пустой TextBox -->
            <TextBox x:Name="txtNew" Width="350" VerticalAlignment="Center"
                     ToolTip="Введите текст новой задачи" />
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Margin="5,0,0,0"
                    Click="btnAdd_Click"/>
        </StackPanel>

        <!-- Список задач без DisplayMemberPath -->
        <ListBox x:Name="lstTasks"
                 DockPanel.Dock="Top"
                 Height="250"
                 SelectionMode="Single" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <!-- Нижняя панель — кнопки действий -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnToggle" Content="Отметить/Снять" Width="218" Margin="0,0,5,0"
                    Click="btnToggle_Click" Height="30" RenderTransformOrigin="0.507,0.521"/>
            <Button x:Name="btnRemove" Content="Удалить" Width="208"
                    Click="btnRemove_Click" RenderTransformOrigin="1.034,0.505" Height="33"/>
        </StackPanel>
    </DockPanel>
</Window>
